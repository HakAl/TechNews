<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_item_height"
    android:id="@+id/news_img_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_item_height"
            android:id="@+id/news_item_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_item_text_height"
            android:textSize="@dimen/news_item_text"
            android:textColor="@color/primary_text"
            android:shadowRadius="2"
            android:shadowColor="@color/white"
            android:gravity="top"
            android:paddingLeft="@dimen/news_item_padding"
            android:paddingRight="@dimen/news_item_padding"
            android:background="#aaeeeeee"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:layout_alignParentBottom="true"
            android:id="@+id/news_item_title"/>

        <!--android:fontFamily="sans-serif"           // roboto regular-->
        <!--android:fontFamily="sans-serif-light"     // roboto light-->
        <!--android:fontFamily="sans-serif-condensed" // roboto condensed-->
        <!--android:fontFamily="sans-serif-thin"      // roboto thin (android 4.2)-->
        <!--android:fontFamily="sans-serif-medium"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/news_item_padding"
            android:singleLine="true"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/news_item_date_text"
            android:textColor="@color/accent_dark"
            android:id="@+id/news_item_date"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>